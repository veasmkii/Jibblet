<?xml version="1.0" encoding="UTF-8"?>
<project name="Jibblet" default="makejar" basedir=".">
  <target name ="makejar" description="Creates the Jibblet project">
    <jar jarfile="Jibblet.jar" includes="*.class" basedir="bin"/>
  </target>
	<manifest file="MANIFEST.MF">
	    <attribute name="Main-class" value="com.veasmkii.jib.RunJIB"/>
	    <attribute name="Built-By" value="${user.name}"/>
	    <section name="common">
	      <attribute name="Specification-Title" value="Example"/>
	      <attribute name="Specification-Version" value="${version}"/>
	      <attribute name="Implementation-Title" value="common"/>
	      <attribute name="Implementation-Version" value="${version} ${TODAY}"/> 
	    </section>
	  </manifest>
</project>